  "private": true,
  "scripts": {
    "build": "npm run clean && npm run fonts && client/assets/fonts mkdir ghost && cd ghost && ghost install local && mkdir content/themes/humanspace && ncp ../client/* content/themes/humanspace",
    "clean": "rimraf ghost && rimraf client/assets/fonts",
    "fonts": "mkdir client/assets/fonts && ncp .assets/futura client/assets/fonts",
    "restart": "cd ghost && ghost restart",
    "start": "cd ghost && ghost start --development",
    "stop": "cd ghost && ghost stop"
  },
  "dependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2"
  }
}
